<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/commentsRowViewFirstLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">


            <ImageView
                android:id="@+id/commentAuthorImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:srcCompat="@mipmap/ic_markic" />

            <LinearLayout

                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/commentAuthorUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:text="Author name"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/commentCreated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:text="Date created"
                        android:textSize="10dp" />

                </LinearLayout>


                <TextView

                    android:id="@+id/commentDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:text="this is comment content"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/likeCommentBtn"
                        android:layout_width="14dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_like" />


                    <ImageView
                        android:id="@+id/dislikeCommentBtn"
                        android:layout_width="14dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp" />
                    <!--app:srcCompat="@drawable/ic_dislike" />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating:"
                        android:textStyle="italic" />


                    <TextView
                        android:id="@+id/commentRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:textSize="10dp"
                        android:textStyle="italic" />


                    <TextView
                        android:id="@+id/CommentFragmentLikeDislikeId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible" />


                    <Button
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:id="@+id/deleteCommentBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="10dp"
                        android:text="Delete comment"
                        android:textSize="10dp"
                        android:visibility="visible" />


                </LinearLayout>



            </LinearLayout>
        </LinearLayout>
</RelativeLayout>