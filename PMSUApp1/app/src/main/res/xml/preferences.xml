<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory

        android:title="Filter posts"
        android:key="sync_settings">
        <ListPreference
            android:dialogTitle="Sort posts"
            android:entries="@array/pref_syncConnectionTypes_entries"
            android:entryValues="@array/pref_syncConnectionTypes_values"
            android:key="@string/pref_sync_list"
            android:title="Sort posts"
            android:summary="%s"
            android:defaultValue="1"/>

        <ListPreference
            android:dialogTitle="Sort comments"
            android:entries="@array/pref_syncConnectionTypes_entries"
            android:entryValues="@array/pref_syncConnectionTypes_values"
            android:key="@string/pref_sync_list"
            android:title="Sort comments"
            android:summary="%s"
            android:defaultValue="1"/>


        <com.example.marko.app1.DatePreference

            android:key="keyname"
            android:title="See posts from ...."
            android:defaultValue="2018-01-01"
            android:summary="Summary"

            >


        </com.example.marko.app1.DatePreference>

    </PreferenceCategory>



</PreferenceScreen>