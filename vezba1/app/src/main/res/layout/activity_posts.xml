<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.marko.vezba1.PostsActivity">


    <include
        android:id="@+id/toolbar"
        layout="@layout/main_toolbar"/>

    <!--Obuhvatiti jednim relative layoutom-->
    <Button
        android:id="@+id/readPostsBtn"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="87dp"
        android:text="read posts" />

    <Button
        android:id="@+id/createPostBtn"
        android:layout_width="105dp"
        android:layout_height="41dp"
        android:layout_alignBottom="@+id/settingsBtn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="115dp"
        android:text="create post" />

    <Button
        android:id="@+id/settingsBtn"
        android:layout_width="138dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/readPostsBtn"
        android:layout_marginEnd="12dp"
        android:text="enter settings" />

</RelativeLayout>